{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    
    "baseUrl": ".",
    "paths": {
      "@api/*": ["./api/*"],
      "@routes/*": ["./api/routes/*"],
      "@functions/*": ["./api/functions/*"],
    },
    "types": ["node"]
  },
  "lib": ["es2015"]
}
